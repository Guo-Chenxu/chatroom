<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chatroom.mapper.MessageMapper">

    <resultMap id="BaseResultMap" type="com.chatroom.entity.Message">
        <result column="message_id" property="messageId"/>
        <result column="sender_id" property="senderId"/>
        <result column="receiver_id" property="receiverId"/>
        <result column="content" property="content"/>
        <result column="file" property="file"/>
        <result column="send_time" property="sendTime" jdbcType="TIMESTAMP"/>
        <result column="message_type" property="messageType"/>
        <result column="is_group_message" property="isGroupMessage"/>
        <result column="is_read" property="isRead"/>
    </resultMap>

    <sql id="Base_Column_List">
        message_id,
        sender_id,
        receiver_id,
        content,
        `file`,
        send_time,
        message_type,
        is_group_message,
        is_read
    </sql>

    <insert id="add" useGeneratedKeys="true" keyColumn="id" keyProperty="id"
            parameterType="com.chatroom.entity.Message">
        INSERT INTO message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != senderId and '' != senderId">
                sender_id,
            </if>
            <if test="null != receiverId and '' != receiverId">
                receiver_id,
            </if>
            <if test="null != content and '' != content">
                content,
            </if>
            <if test="null != file and '' != file">
                `file`,
            </if>
            <if test="null != sendTime">
                send_time,
            </if>
            <if test="null != messageType and '' != messageType">
                message_type,
            </if>
            <if test="null != isGroupMessage and '' != isGroupMessage">
                is_group_message,
            </if>
            <if test="null != isRead and '' != isRead">
                is_read
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="null != senderId and '' != senderId">
                #{senderId},
            </if>
            <if test="null != receiverId and '' != receiverId">
                #{receiverId},
            </if>
            <if test="null != content and '' != content">
                #{content},
            </if>
            <if test="null != file and '' != file">
                #{file},
            </if>
            <if test="null != sendTime">
                #{sendTime},
            </if>
            <if test="null != messageType and '' != messageType">
                #{messageType},
            </if>
            <if test="null != isGroupMessage and '' != isGroupMessage">
                #{isGroupMessage},
            </if>
            <if test="null != isRead and '' != isRead">
                #{isRead}
            </if>
        </trim>
    </insert>
    <update id="setMessageReaded">
        update message
        set is_read = 1
        where receiver_id = #{userId}
    </update>

    <delete id="delete">
        DELETE
        FROM message
        where is_group_message = 1
          and send_time &lt; #{time}
    </delete>

    <select id="getFriendMessage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM message
        WHERE (sender_id = #{id1} and receiver_id = #{id2} and is_group_message = 0)
        or (sender_id = #{id2} and receiver_id = #{id1} and is_group_message = 0)
    </select>

    <select id="getGroupMessage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM message
        WHERE is_group_message = 1 and receiver_id = #{groupId}
    </select>

    <select id="getAllMessages" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM message
    </select>

    <select id="getNotReadMessage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM message
        where is_read = 0 and receiver_id = #{userId}
    </select>
</mapper>